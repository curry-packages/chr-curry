{
    "name": "chr-curry",
    "version": "3.2.0",
    "author": "Michael Hanus <mh@informatik.uni-kiel.de>",
    "synopsis": "A library to use Constraint Handling Rules in Curry programs",
    "category": [ "Constraints" ],
    "dependencies": {
        "base"         : ">= 3.2.0, < 4.0.0",
        "flatcurry"    : ">= 3.0.0, < 5.0.0",
        "prolog"       : ">= 3.0.0, < 4.0.0",
        "redblacktree" : ">= 3.0.0, < 4.0.0",
        "wl-pprint"    : ">= 3.0.0, < 4.0.0",
        "xml"          : ">= 3.0.0, < 4.0.0"
    },
    "exportedModules": [ "CHR" ],
    "description": "This package provides an implementation of Constraint Handling Rules in Curry.",
    "compilerCompatibility": {
        "pakcs": ">= 3.0.0, < 4.0.0"
    },
    "license": "BSD-3-Clause",
    "licenseFile": "LICENSE",
    "testsuite": {
        "src-dir": "examples",
        "options": "-v",
        "script":  "test.sh"
    },
     "source": {
        "git": "https://github.com/curry-packages/chr-curry.git",
        "tag": "$version"
    }
}
